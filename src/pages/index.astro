---
import Card from '../components/Card.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Portfolio">
	<main class="flex flex-col items-center justify-start px-5 py-12 relative">
		<div class="w-full max-w-sm flex flex-col items-center">
			<div id="cube" class="w-[384px] h-[153px] bg-[#faa61a] rounded-xl flex justify-center  mb-14">
				<img src="78098509.png" class="rounded-full w-20 h-20 border-4 border-white mt-28 aspect-auto" />
			</div>

			<h1 class="text-2xl font-bold mt-2 text-gray-800">Hendrick.dev</h1>
			<p class="text-gray-600 dark:text-gray-400 text-sm text-pretty text-center">Hello, I'm <span class="text-[#faa61a]">Hendrick</span> a hobbyist web developer/designer from	 the Dominican Republic, here are some projects I've worked on.</p>
			
			<div class="flex flex-col gap-2 w-full">
				<h2 class="text-xl font-bold mt-2">Projects</h2>
				<div class="text-gray-600">
					<Card
					title="SASU"
					body="A bot that lets people interact with steam from discord"
					href='https://github.com/Xhand98/SASU'
					svg='steam.svg'
					/>
				</div>

				<div class="text-gray-600">
					<Card
					title="Stapy"
					body="Library that connects with steam Web API."
					href='https://github.com/Xhand98/steam-api'
					svg='key-solid.svg'
					/>
				</div>
			</div>
		</div>
	</main>
</Layout> 