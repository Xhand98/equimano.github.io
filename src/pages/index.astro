---
import Card from '../components/Card.astro';
import Layout from '../layouts/Layout.astro';
import steam from 'steam-seeklogo.svg'
---

<Layout title="Portfolio">
	<main class="flex justify-center">
		<div class="w-full max-w-sm flex flex-col items-center">
			<div id="cube" class="w-[384px] h-[153px] bg-[#faa61a] rounded-xl flex justify-center mt-[31px] mb-14">
				<img src="https://avatars.githubusercontent.com/u/78098509?s=400&v=4" alt="" class="rounded-full w-20 h-20 border-4 border-white mt-28">
			</div>

			<h1 class="text-2xl font-bold mt-2">Hendrick.dev</h1>
			<p class="text-gray-600 dark:text-gray-400 text-sm text-pretty text-center">Hello, I'm <span class="text-[#faa61a]">Hendrick</span> a hobbyist web developer/desinger from the Dominican Republic, here are some projects I've worked on.</p>
			
			<div class="flex flex-col gap-1 w-full">
				<h2 class="text-xl font-bold mt-2">Projects</h2>
				<div class="text-gray-600">
					<a href="#" class="flex rounded-xl flex-row bg-white gap-3 p-3">
					<div class="shrink-0">
							<img src="steam.svg" alt="" class="w-6 text-red-600">
						</div>
						<div class="font-medium flex-1 text-sm leading-6 line-clamp-1">SASU - discord bots who</div>
					</a>
			</div>
			</div>
		</div>
	</main>
</Layout> 